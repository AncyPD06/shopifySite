<div id="accordion" class="nav-tab-info-vertical product-accordion">

    {% if product.metafields.custom.product_description != blank %}
    <div class="card">
      <div class="card-header border-top">
        {% if product.metafields.custom.product_description != '' %}
        <a class="collapsed card-link" data-toggle="collapse" data-target="#collapseTwo"  href="#">
          {% include 'right-arrow-icon' %} {{section.settings.stab_title1}}
        </a>
        {% endif %}
      </div>
      <div id="collapseTwo" class="collapse" data-parent="#accordion">
        <div class="card-body px-0">
            {{product.metafields.custom.product_description | metafield_tag}}
        </div>
      </div>
    </div>
    {% endif %}

 
    {% if product.metafields.custom.product_guides != blank %}
    <div class="card">
      <div class="card-header">
        {% if product.metafields.custom.product_guides != '' %}
        <a class="collapsed card-link" data-toggle="collapse" data-target="#collapseThree"  href="#">
          {% include 'right-arrow-icon' %} {{section.settings.stab_title2}}
        </a>
        {% endif %}
      </div>
      <div id="collapseThree" class="collapse" data-parent="#accordion">
        <div class="card-body px-0">
            {{product.metafields.custom.product_guides | metafield_tag}}
        </div>
      </div>
    </div>
    {% endif %}

  
    {% if product.metafields.custom.product_warranty_info != blank %}
    <div class="card">
      <div class="card-header">
        {% if product.metafields.custom.product_warranty_info != '' %}
        <a class="collapsed card-link" data-toggle="collapse" data-target="#collapseFour"  href="#">
          {% include 'right-arrow-icon' %} {{section.settings.stab_title3}}
        </a>
        {% endif %}
      </div>
      <div id="collapseFour" class="collapse" data-parent="#accordion">
        <div class="card-body px-0">
            {{product.metafields.custom.product_warranty_info}}
        </div>
      </div>
    </div>
    {% endif %}

  
    {% if product.metafields.info.tab4 != blank %}
    <div class="card">
      <div class="card-header">
        {% if product.metafields.info.tab4 != blank %}
        <a class="collapsed card-link" data-toggle="collapse" data-target="#collapseTwo4"  href="#">
          {% include 'right-arrow-icon' %} {{section.settings.stab_title4}}
        </a>
        {% endif %}
      </div>
      <div id="collapseTwo2" class="collapse" data-parent="#accordion">
        <div class="card-body px-0">
            {{product.metafields.info.tab4}}
        </div>
      </div>
    </div>
    {% endif %}

  
    {% if section.settings.gtab_review_enable %}
    <div class="card">
      <div class="card-header">
        <a class="collapsed card-link" data-toggle="collapse" data-target="#collapseThree"  href="#">
          {% include 'icon-arrow-right' %} {{section.settings.gtab_review}}
        </a>
      </div>
      <div id="collapseThree" class="collapse" data-parent="#accordion">
        <div class="card-body px-0">
            <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
        </div>
      </div>
    </div>
    {% endif %}

  
  </div>