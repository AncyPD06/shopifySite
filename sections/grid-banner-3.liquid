<!-- grid-banner-3.liquid -->
<div class="customstyle{{ section.id }} grid-banner-link__block banner-theme-text" data-aos={{section.settings.animation}} >
    {%- include 'style-section' -%}
  <div class="{{ section.settings.setwidth }}">
    <div class="section-block">
      <div class="flex justify-content-between">
      <div>
      {%- include 'section-heading' -%}
      </div>
      {%- assign buttonOverRideStyleCarousel = "display: block; position: relative; top: auto; transform: initial;"  -%}
      <div class="flex slider-arrow-cont" style="column-gap: 1.5rem; flex-basis: 0;"> 
        <button type="button" data-role="none" class="slick-prev heading-slick-arrow slick-arrow grid-arrow-prev" aria-label="Previous" role="button" style="{{ buttonOverRideStyleCarousel }}">Previous</button>
        <button type="button" data-role="none" class="slick-next heading-slick-arrow slick-arrow grid-arrow-next" aria-label="Next" role="button" style="{{ buttonOverRideStyleCarousel }}">Next</button>
      </div>
    </div>

      <div class="brand-slider row mb-0" id="collection-list-{{ section.id }}"
            data-rows="{{section.settings.rows}}"
            data-slidesToShow="{{ section.blocks.size }}"
            data-slidesToShow-tablet="{{ section.blocks.size }}"
            data-slick='{"prevArrow": ".grid-arrow-prev", "nextArrow": ".grid-arrow-next"}'
            data-slidestoscroll="1"
            data-arrows="true"
            data-dots="false" 
            data-draggable="true" 
            data-infinite="true" 
            data-section-id="{{ section.id }}" 
            data-section-type="slickCarousels">
          
        {%- for block in section.blocks -%}

           
     
          {%- if block.settings.width == "auto" -%} 
            {% assign colWidth = "col" %}
            {%- else -%} 
            {% assign colWidth = "col-md-" | append: block.settings.width %}
            {%- endif -%} 
        <div class="{{ colWidth }} grid-banner__block grid-banner-link__block-item grid-banner__block_{{block.id}}" {{ block.shopify_attributes }}>
          <style>
              .customstyle{{ section.id }} 
              .grid-banner__block_{{block.id}}{
                border-radius: {{block.settings.block_radius}}px;
                background-color: {{block.settings.block_bg}};
                margin: 20px;
                margin-top: 0px;
                padding: 30px;
              }
              .customstyle{{ section.id }} 
              .grid-banner__block_{{block.id}}:hover {
                 background-color: {{block.settings.block_bg_hover}};
              }
              .customstyle{{ section.id }} .slider-arrow-cont{
                display: none;
              }
            @media (min-width: 1200px ){
              .customstyle{{ section.id }} .slick-list{
                padding: 0;
              }
            }

            @media (max-width: 576){
              .customstyle{{ section.id }} .slick-list {
                padding: 0 15% 0 0;
              }
            }
           
            </style>
          {%- if block.settings.section_link != blank -%}<a href="{{block.settings.section_link}}"> {%- endif -%}
          <figure class="hv-image-saturate text-{{block.settings.text_align}} {% if section.settings.no_gutter %}m-0{% endif %} d-flex {{block.settings.reverse}}">
            {%- if block.settings.image != blank -%}
            
            <img src="{% include 'srcBlank' %}" class="lazyload transition" data-src="{{block.settings.image |img_url: '1100x', crop: 'center'}}">
           
            {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
            <figcaption class="figcaption--{{block.id}} pt-4">
              {%- if block.settings.description -%}
              {{block.settings.description}}
              {%- endif -%}
              {%- if block.settings.button_text != blank -%}
              <button class="btn btn-theme gradient-theme">
                <span class="px-2">{{block.settings.button_text}}</span>
                {{block.settings.button_icon}}
              </button>
              {%- endif -%}
            </figcaption>		
          </figure>
             {%- if block.settings.section_link != blank -%} </a> {%- endif -%}
        </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
  </div>
  
