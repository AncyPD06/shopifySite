<!-- services-custom.liquid -->

  <style>
     .customstyle{{ section.id }} .iconx8 svg, .customstyle{{ section.id }} .iconx8 .icon, .customstyle{{ section.id }} .iconx8 [class^=icon-]{
      width: {{section.settings.size}}px;
      height: {{section.settings.size}}px;
      font-size: {{section.settings.size}}px;
    }
    
  </style>
  <div class="customstyle{{ section.id }} {% if section.settings.layout == 'style-3' %} block-sv3 {% endif %}" data-aos={{section.settings.animation}} >
  {%- include 'style-section' -%}
<div class="{{ section.settings.setwidth }}">
    
        <div class="row services-section-container no-gutters" {{ block.shopify_attributes }}>
    {%- for block in section.blocks -%}
          {%- case section.settings.layout -%}
          {%- when 'style-1' -%}
          <div class="media service-1 text-left py-3" style="background-color:{{block.settings.bgblock}};">
            <span class=" mr-4 iconx8" style="color:transparent;">
              {{block.settings.icon | default:'[[ Icon ]]'}}
            </span>
            <div class="media-body">
              <h6 class="mt-0 mb-1 h6" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</h6>
              <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
            </div>
          </div>
          {%- when 'style-2' -%}
          <div class="media service-2 text-center">
            <div class="media-body py-5" style="background-color:{{block.settings.bgblock}};">
                <div class="mb-4 iconx8" style="color:{{section.settings.iconcolor}};">
                {{block.settings.icon | default:'[[ Icon ]]'}}
              </div>
                <div class="mt-0 mb-1 h6" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</div>
              <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
            </div>
          </div>
          {%- when 'style-3' -%}
          <div class="media service-3 text-center">
              <div class="media-body py-3" style="background-color:{{block.settings.bgblock}};">
                <div class="py-5">
                  <div class="mb-4 iconx8" style="color:{{section.settings.iconcolor}};">
                  {{block.settings.icon | default:'[[ Icon ]]'}}
                </div>
                  <h6 class="mt-0 mb-2 h6" style="color:{{section.settings.titlecolor}};">{{block.settings.title}}</h6>
                <div style="color:{{section.settings.subcolor}};">{{block.settings.description}}</div>
              </div>
            </div>
          </div>
          {%- endcase -%}
        {%- endfor -%}
      
        </div>
</div>
    </div>


