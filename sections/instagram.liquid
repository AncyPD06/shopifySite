<!-- instagram.liquid -->
<style>
  .customstyle{{ section.id }} .slick-list {
    padding: 0 15% 0 0;
  }
  .customstyle{{ section.id }} .section-block{
    overflow: hidden;
  }
  {% if section.settings.padding == false %}
  .customstyle{{ section.id }} .instagram .slick-slide{
    padding:0;
  }
  {% endif %}
  .texton{
    position: absolute;
    top:50%;
    left:50%;
    transform: translateX(-50%) translateY(-50%);
    min-width: 200px;
  }
  {%- if section.settings.zigzag -%}
  .instagram-zigzag .slick-track .hv-image-brightness:not(:first-child){
    margin-left: -15px;
  }
  .instagram-zigzag .slick-track .hv-image-brightness:nth-child(2n-1){
    margin-top: 50px;
  }
  {%- endif -%}
</style>
<div class="customstyle{{ section.id }} instagram__container" data-aos="{{section.settings.animation}}">
  {%- include 'style-section' -%}
<div class="{{ section.settings.setwidth }}">
  <div class="section-block">
    <div class="flex justify-content-between">
      <div>
      {%- include 'section-heading' -%}
       <h3 class="section-title-2 mb-5 font-weight-bold mobile-title">
        <span>{{section.settings.mobile_title}}</span>
      </h3>
      </div>
      {%- assign buttonOverRideStyleCarousel = "display: block; position: relative; top: auto; transform: initial;"  -%}
      <div class="flex arrow-container" style="column-gap: 1.5rem; flex-basis: 0;"> 
        <button type="button" data-role="none" class="slick-prev heading-slick-arrow slick-arrow instagram-arrow-prev" aria-label="Previous" role="button" style="{{ buttonOverRideStyleCarousel }}">Previous</button>
        <button type="button" data-role="none" class="slick-next heading-slick-arrow slick-arrow instagram-arrow-next" aria-label="Next" role="button" style="{{ buttonOverRideStyleCarousel }}">Next</button>
      </div>
    </div>
    <div class="position-relative">
    <div class="instagram row mb-0 dots-negative asdada {% if section.settings.padding == false %} m-0{% endif %} {% if section.settings.zigzag %} instagram-zigzag {% endif %}" id="Instagram-{{ section.id }}"
         data-style="{{section.settings.style}}"
          data-slick='{"prevArrow": ".instagram-arrow-prev", "nextArrow": ".instagram-arrow-next"}'
         data-accesstoken="{{section.settings.accesstoken}}"
         data-limit="{{ section.settings.limit }}" 
         data-slidesToShow="{{section.settings.show}}"
         data-slidestoshow-tablet="3"
         data-slidestoshow-mobile="1"
         data-arrows="{{ section.settings.arrows }}"
         data-dots="{{ section.settings.dots }}" 
         data-draggable="{{ section.settings.draggable }}" 
         data-infinite="{{ section.settings.infinite }}" 
         
         data-section-id="{{ section.id }}" 
         data-section-type="instagrams"
         data-aos="{{section.settings.animation}}" data-aos-duration="1200" >
         
    </div>
    {%- if section.settings.ontext -%}
    <div class="texton bg-white py-2 px-3">
      {{section.settings.textonimage}}
      
    </div>
    {%- endif -%}
  </div>
</div>
</div>
</div>

